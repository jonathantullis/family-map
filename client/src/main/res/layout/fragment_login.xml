<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:id="@+id/row_1"
        android:layout_height="50dp">
        <TextView
            android:text="Server Host:"
            android:layout_height="fill_parent"
            android:layout_width="85dp"
            android:gravity="bottom|end"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:id="@+id/server_host"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:inputType="numberDecimal"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/row_1"
        android:id="@+id/row_2">
        <TextView
            android:text="Server Port:"
            android:layout_height="fill_parent"
            android:layout_width="85dp"
            android:gravity="bottom|end"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:id="@+id/server_port"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:inputType="numberDecimal"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/row_2"
        android:id="@+id/row_3">
        <TextView
            android:text="User Name:"
            android:layout_height="fill_parent"
            android:layout_width="85dp"
            android:gravity="bottom|end"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:id="@+id/user_name"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:inputType="text"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/row_3"
        android:id="@+id/row_4">
        <TextView
            android:text="Password:"
            android:layout_height="fill_parent"
            android:layout_width="85dp"
            android:gravity="bottom|end"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:id="@+id/password"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:inputType="textPassword"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/row_4"
        android:id="@+id/row_5">
        <TextView
            android:text="First Name:"
            android:layout_height="fill_parent"
            android:layout_width="85dp"
            android:gravity="bottom|end"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:id="@+id/first_Name"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:inputType="text"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/row_5"
        android:id="@+id/row_6">
        <TextView
            android:text="Last Name:"
            android:layout_height="fill_parent"
            android:layout_width="85dp"
            android:gravity="bottom|end"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:id="@+id/last_Name"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:inputType="text"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/row_6"
        android:id="@+id/row_7">
        <TextView
            android:text="Email:"
            android:layout_height="fill_parent"
            android:layout_width="85dp"
            android:gravity="bottom|end"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:id="@+id/email"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:inputType="textEmailAddress"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/row_7"
        android:id="@+id/row_8">
        <TextView
            android:text="Gender:"
            android:layout_height="fill_parent"
            android:layout_width="85dp"
            android:gravity="bottom|end"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"/>
        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:gravity="bottom"
            android:id="@+id/gender_radio_group">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="Male"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"/>
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/row_8"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:id="@+id/row_9">
        <Button
            android:text="SIGN IN"
            android:id="@+id/sign_in_button"
            android:layout_height="fill_parent"
            android:layout_width="90dp"
            android:layout_marginHorizontal="5dp"
            tools:ignore="ButtonStyle" />
        <Button
            android:text="REGISTER"
            android:id="@+id/register_button"
            android:layout_height="fill_parent"
            android:layout_width="90dp"
            android:layout_marginHorizontal="5dp"
            tools:ignore="ButtonStyle" />
    </LinearLayout>
</RelativeLayout>