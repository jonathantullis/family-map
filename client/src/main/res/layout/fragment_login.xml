<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:id="@+id/row_1"
        android:layout_height="60dp">
        <TextView
            android:text="@string/input_label_server_host"
            android:layout_height="fill_parent"
            android:layout_width="85dp"
            android:gravity="bottom|end"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:id="@+id/server_host"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:inputType="text"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/row_1"
        android:id="@+id/row_2">
        <TextView
            android:text="@string/input_label_server_port"
            android:layout_height="fill_parent"
            android:layout_width="85dp"
            android:gravity="bottom|end"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:id="@+id/server_port"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:inputType="numberDecimal"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/row_2"
        android:id="@+id/row_3">
        <TextView
            android:text="@string/input_label_user_name"
            android:layout_height="fill_parent"
            android:layout_width="85dp"
            android:gravity="bottom|end"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:id="@+id/user_name"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:inputType="text"
            android:autofillHints="AUTOFILL_HINT_USERNAME" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/row_3"
        android:id="@+id/row_4">
        <TextView
            android:text="@string/input_label_password"
            android:layout_height="fill_parent"
            android:layout_width="85dp"
            android:gravity="bottom|end"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:id="@+id/password"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:inputType="textPassword"
            android:autofillHints="AUTOFILL_HINT_PASSWORD" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/row_4"
        android:id="@+id/row_5">
        <TextView
            android:text="@string/input_label_first_name"
            android:layout_height="fill_parent"
            android:layout_width="85dp"
            android:gravity="bottom|end"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:id="@+id/first_Name"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:inputType="text"
            android:autofillHints="AUTOFILL_HINT_NAME_GIVEN" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/row_5"
        android:id="@+id/row_6">
        <TextView
            android:text="@string/input_label_last_name"
            android:layout_height="fill_parent"
            android:layout_width="85dp"
            android:gravity="bottom|end"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:id="@+id/last_Name"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:inputType="text"
            android:autofillHints="AUTOFILL_HINT_NAME_FAMILY" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/row_6"
        android:id="@+id/row_7">
        <TextView
            android:text="@string/input_label_email"
            android:layout_height="fill_parent"
            android:layout_width="85dp"
            android:gravity="bottom|end"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:id="@+id/email"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:inputType="textEmailAddress"
            android:autofillHints="AUTOFILL_HINT_EMAIL" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/row_7"
        android:id="@+id/row_8">
        <TextView
            android:text="@string/input_label_gender"
            android:layout_height="fill_parent"
            android:layout_width="85dp"
            android:gravity="bottom|end"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"/>
        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:gravity="bottom"
            android:id="@+id/gender_radio_group">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="@string/radio_label_male"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/radio_label_female"/>
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/row_8"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:id="@+id/row_9">
        <Button
            android:text="@string/button_label_sign_in"
            android:id="@+id/sign_in_button"
            android:layout_height="fill_parent"
            android:layout_width="90dp"
            android:layout_marginHorizontal="5dp"
            tools:ignore="ButtonStyle" />
        <Button
            android:text="@string/button_label_register"
            android:id="@+id/register_button"
            android:layout_height="fill_parent"
            android:layout_width="90dp"
            android:layout_marginHorizontal="5dp"
            tools:ignore="ButtonStyle" />
    </LinearLayout>
</RelativeLayout>